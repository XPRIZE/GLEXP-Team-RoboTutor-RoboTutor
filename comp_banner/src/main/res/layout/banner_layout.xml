<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipChildren="false">

    <!-- in Relative layout - views have to be defined before being referenced -->

    <cmu.xprize.robotutor.tutorengine.widgets.core.TTextView
        android:id="@+id/StutorVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="25sp"
        android:textColor="#FFF" />


    <ImageButton
        android:id="@+id/SlevelSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StutorVersion"
        app:layout_marginRightPercent="4%"
        android:alpha=".9"
        android:src="@drawable/level_button"
        android:visibility="gone"
        android:background="@null"/>


    <ImageButton
        android:id="@+id/Sbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_button"
        android:visibility="visible"
        android:background="@null"/>


    <cmu.xprize.banner.persona.Persona
        android:id="@+id/Spersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_centerInParent="true"/>


    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="8%"
        android:alpha=".9"
        android:src="@drawable/exit_button"
        android:visibility="gone"
        android:background="@null"/>

</android.support.percent.PercentRelativeLayout>